
@{
    ViewBag.Title = "Matrícula UMCA | Ingreso de nueva sede";
    Layout = "~/Views/Shared/_LayoutMatricula.cshtml";
}

<h2 class="text-center">Ingresar nueva sede</h2>
<div class="row justify-content-center align-items-center h-100 border-left border-right">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <form method="post" id="frmSedes">
            <div class="form-group">
                <label>Nombre de sede:</label>
                <input type="text" value="" class="form-control" name="Nombre_Sede" />
            </div>
            <div class="form-group">
                <label>Código de sede:</label>
                <input type="text" value="" class="form-control" name="Codigo_Sede" />
            </div>
            <div class="form-group">
                <label>Director</label>
                <select class="form-control" name="Id_Director">
                    <option value="">Seleccione un director</option>

                </select>
            </div>
            <div class="form-group">
                <label>Provincia:</label>
                <select class="form-control" name="Id_Provincia" id="Provincia">
                </select>
            </div>
            <div class="form-group">
                <label>Cantón:</label>
                <select class="form-control" name="Id_Canton" id="Canton">
                </select>
            </div>
            <div class="form-group">
                <label>Distrito:</label>
                <select class="form-control" name="Id_Distrito" id="Distrito"></select>
            </div>
            <div class="form-group">
                <label>Dirección física:</label>
                <input type="text" value="" class="form-control" name="Direccion_Fisica" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </div>

        </form>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Sedes/validarSedes.js"></script>
    <script src="~/Scripts/Sedes/cargaGeografia.js"></script>
}
