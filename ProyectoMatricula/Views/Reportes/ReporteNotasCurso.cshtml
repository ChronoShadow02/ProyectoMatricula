@model List<ProyectoMatricula.Modelos.Reporte_Notas_Por_Curso_Result>
@{
    ViewBag.Title = "Matratrícula UMCA | Reporte de notas por curso";
    Layout = "~/Views/Shared/_LayoutMatricula.cshtml";
}

<h1 class="text-center">Reporte de notas por curso</h1>
<form class="d-flex align-content-center justify-content-center" method="post">
    <label for="Nombre_Sede">Sede:</label>&nbsp;
    <input type="text" value="" id="Nombre_Sede" class="form-control" name="Nombre_Sede" /> &nbsp;
    <label>Cuatrimestre:</label>&nbsp;
    <select name="Id_Num_Cuatrimestre" id="Id_Num_Cuatrimestre" class="form-control">
        <option value="">Seleccione una opcion</option>
        @{
            foreach (ProyectoMatricula.Modelos.pa_Cuatrimestre_Num_CuatrimiestreViewBag_Result ListaCuatri in this.ViewBag.Lista_Num_Cuatrimestre)
            {
                <option value="@ListaCuatri.Id_Num_Cuatrimestre">@ListaCuatri.Numero_Cuatrimestre</option>
            }
        }
    </select>
    <label>Nombre del curso:</label>&nbsp;
    <input type="text" value="" class="form-control" name="Nombre_Curso" id="Nombre_Curso" />&nbsp;
    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Buscar</button>
</form>
<br />
<table class ="table text-center table-hover table-bordered table-striped">
    <tr>
        <th>Nota</th>
        <th>Estado de nota</th>
        <th>Curso</th>
        <th>Cuatrimestre</th>
        <th>Sede</th>
        <th>Año</th>
    </tr>
    @{
        foreach (ProyectoMatricula.Modelos.Reporte_Notas_Por_Curso_Result posicionModelo in this.Model)
        {
        <tr>
            <td>@posicionModelo.Nota</td>
            <td>@posicionModelo.Estado_Nota</td>
            <td>@posicionModelo.Nombre_Curso</td>
            <td>@posicionModelo.Id_Num_Cuatrimestre</td>
            <td>@posicionModelo.Nombre_Sede</td>
            <td>@posicionModelo.Año_Cuatrimestre</td>
        </tr>
        }
    }
    </table>
    <br />
    <div class="d-flex align-content-center justify-content-center">
        <a href="~/Matricula/IndexMatricula" class="btn btn-outline-secondary"><i class="fa fa-home"></i> Ir al menú principal</a> &nbsp;
    </div>
    <br />
