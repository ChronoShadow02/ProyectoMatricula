@{
    Layout = "~/Views/Shared/_LayoutMatricula.cshtml";
}
<br />
<h1 class="text-center border-top ">Ingresar estudiante</h1>

<div class="row justify-content-center align-items-center h-100 border-left border-right">

    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">

        <form method="post" id="frmEstudiante">
            <div class="form-group">
                <label for="txtNombre">Nombre Completo</label>
                <input type="text" id="txtNombre" name="Nombre_Estudiante" class="form-control" />
            </div>
            <div class="form-group">
                <label for="txtCedula">Cédula</label>
                <input type="text" id="txtCedula" name="Cedula_Estudiante" class="form-control" />
            </div>
            <div class="form-group">
                <label for="">Provincia</label>
                <select class="form-control" name="Id_Provincia" id="Provincia">
                </select>
            </div>
            <div class="form-group">
                <label for="">Cantón</label>
                <select class="form-control" name="Id_Canton" id="Canton">
                </select>
            </div>
            <div class="form-group">
                <label for="">Distrito</label>
                <select class="form-control" name="Id_Distrito" id="Distrito">

                </select>
            </div>
            <div class="form-group">
                <label for="txtFecha">Fecha de Inicio</label>
                <input type="date" value="" id="txtFecha" name="Fecha_Inicio_U" class="form-control" />
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Estudiante/validarEstudiante.js"></script>
    <script src="~/Scripts/cargaGeografia.js"></script>
}
