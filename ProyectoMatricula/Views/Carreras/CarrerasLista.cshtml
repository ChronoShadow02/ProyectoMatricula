@model List<ProyectoMatricula.Modelos.pa_Carreras_Select_Result>
@{
    ViewBag.Title = "Matricula UMCA | Lista de carreras universitarias";
    Layout = "~/Views/Shared/_LayoutMatricula.cshtml";
}

<h1 class="text-center">Lista de carreras universitarias</h1>
    <form class="d-flex align-content-center justify-content-center" method="post">
            <label for="Nombre_Carrera">Carrera:</label>&nbsp;
            <input type="text" value="" id="Nombre_Carrera" class="form-control" name="Nombre_Carrera" /> &nbsp;
            <label>Código:</label>&nbsp;
            <input type="text" value="" class="form-control" name="Codigo_Carrera" id="Codigo_Carrera" />&nbsp;
            <button type="submit" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i> Buscar</button>
    </form>
    <br />
    <table class="table text-center table-hover table-bordered table-striped">
        <tr>
            <th>Identificador</th>
            <th>Carrera</th>
            <th>Código de carrera</th>
            <th>Dirección de carrera</th>
            <th colspan="2">Acciones</th>
        </tr>
        @{
            foreach (ProyectoMatricula.Modelos.pa_Carreras_Select_Result pocisionCarrera in this.Model)
            {
                <tr>
                    <td>@pocisionCarrera.Id_Carrera_Univeriatria</td>
                    <td>@pocisionCarrera.Nombre_Carrera</td>
                    <td>@pocisionCarrera.Codigo_Carrera</td>
                    <td>@pocisionCarrera.Nombre_Direccion_Carrera</td>
                    <td><a href="~/Carreras/CarrerasModifica?Id_Carrera_Univeriatria=@pocisionCarrera.Id_Carrera_Univeriatria">Modificar</a></td>
                    <td><a href="~/Carreras/CarrerasElimina?Id_Carrera_Univeriatria=@pocisionCarrera.Id_Carrera_Univeriatria">Eliminar</a></td>
                </tr>
            }
        }
    </table>
    <div class="d-flex align-content-center justify-content-center">
        <a href="~/Matricula/IndexMatricula" class="btn btn-outline-secondary"><i class="fa fa-home" aria-hidden="true"></i>Menú principal</a> &nbsp;
        <a href="~/Carreras/CarrerasNuevo" class="btn btn-outline-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Agregar carrera</a>
    </div>
    <br />
