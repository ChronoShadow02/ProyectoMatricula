
@{
    ViewBag.Title = "FuncionarioNuevo";
    Layout = "~/Views/Shared/_LayoutProyectoMatricula.cshtml";
}

<h2>Ingresar nuevo funcionario</h2>
<form action="" method="post" id="frmFuncionario">
    <div class="form-group">
        <label>Nombre de funcionario:</label>
        <input type="text" value="" class="form-control" name="Nombre_Funcionario" />
    </div>
    <div class="form-group">
        <label>Cédula:</label>
        <input type="text" value="" class="form-control" name="Cedula_Funcionario" />
    </div>
    <div class="form-group">
        <select class="form-control" name="Id_Provincia">
            <option value="">Seleccione una provincia</option>

        </select>
    </div>
    <div class="form-group">
        <select class="form-control" name="Id_Canton">
            <option value="">Seleccione un cantón</option>

        </select>
    </div>
    <div class="form-group">
        <select class="form-control" name="Id_Distrito">
            <option value="">Seleccione un distrito</option>

        </select>
    </div>
    <div class="form-group">
        <label>Fecha de contratación:</label>
        <input type="date" value="" class="form-control" name="Fecha_Contratacion" />
    </div>
    <button type="submit">Ingresar</button>
</form>
@section scripts{
    <script src="~/Scripts/Funcionario/validarFuncionario.js"></script>
}

